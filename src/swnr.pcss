@font-face {
  font-family: "Gayathri";
  src: url("assets/fonts/Gayathri-Regular.ttf");
}

@font-face {
  font-family: "Gayathri";
  src: url("assets/fonts/Gayathri-Bold.ttf");
  font-weight: bold;
}

body {
  font-family: "Gayathri";
}
h1,
h2,
h3,
h4,
h5,
h6 {
  font-family: "Gayathri";
  font-weight: bold;
}
$chatblue: #d4d5d6;

.chat-message {
  border: none;
  background: none;
  padding: 2px;
  background: $chatblue;
  //background: url(assets/images/blue-brush.jpg) repeat;
}

.card-buttons {
  width: 60%;
  padding: 4px;
  margin: auto;
}

.card-show-buttons {
  width: 60%;
  padding: 4px;
  margin: auto;
}

.chat-button-small {
  width: 22px;
  height:22px;
  font-size:10px;
  line-height:1px
}

#chat-form textarea {
  width: 100%;
  height: 100%;
  resize: none;
  background: $chatblue;
}

.window-app .window-content {
  background-image: unset;
  background: $chatblue;
}

.swnr .window-content {
  /* &,
  *:not(.far, .fa, .fas, option) {
    all: initial;
  }
  all: initial; */
  @tailwind base;
  @layer base {
    color: white;
  }
}
section.window-content {
  @apply bg-gray-700;
  font-size: 12pt;
}
input[type="text"], input[type="number"], input[type="password"], input[type="date"], input[type="time"], select, textarea { 
  @appy focus:shadow-none focus:outline-none;
}
input, select, textarea {
  @apply bg-white rounded-none placeholder-gray-500 focus:shadow-none;
}
:-moz-focusring {
  @apply outline-none;
}
a:hover {
  text-shadow: unset;
}
.tabs .item {
  @apply transition-text-shadow text-shadow text-shadow-transparent hover:text-shadow-gray-400;
}
.tabs .item.active {
  text-decoration-line: underline;
  @apply text-shadow-gray-400;
}

.item-entry
{
  @apply  py-0.5 pb-2 ;
}

.small-cell {
  max-width:60px;
  @apply px-2;
}

.med-cell {
  max-width:80px;
  @apply px-2;
}

div.editor .editor-content{
  min-height: 100px;
  resize: vertical;
}
.window-app.swnr {
  @tailwind components;

  @tailwind utilities;
}
.dieRoll {
  list-style-type: none;
  margin: 0px;
  .die {
    display: inline;
  }
  padding: 0px;
  .die.flop {
    text-decoration: line-through #00000098;
    color: slategrey;
  }
  .die.good {
    color: green;
  }
  .die.bad {
    color: red;
  } 
}
.hpRoll {
  .status {
    div {
      display: inline;
    }
  }
}
